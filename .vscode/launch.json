    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 3000,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome", // Or "msedge" for Edge
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000/index.html", // <-- Use the URL from Live Server (adjust port/file if needed)
            "webRoot": "${workspaceFolder}" // <-- Helps VS Code map served files back to your source code for breakpoints
          }
    ]
}